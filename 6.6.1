let word = prompt("Введите сюда слово");

const originalWord = word;

const cleanedWord = word.toLowerCase().replace(/\s+/g, "");

const reversedWord = cleanedWord.split("").reverse().join("");

let result;
if (cleanedWord === reversedWord) {
  result = `Слово "${originalWord}" является палиндромом`;
} else {
  result = `Слово "${originalWord}" не является палиндромом`;
}

alert(result);
