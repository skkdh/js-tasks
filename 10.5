<!doctype html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Кредитный калькулятор</title>
</head>

<body>
    <ul>
        <li>если клиенту нет 18 лет, то кредит он не получит</li>
        <li>если клиенту от 18 до 21, то он может получить максимум 50000</li>
        <li>если клиенту от 22 до 35, то он сможет получить максимум 400000</li>
        <li>если клиенту от 36 до 65, то ему одобрят максимум 1000000</li>
        <li>кредит могут выдавать суммами кратными 1000.</li>
    </ul>

    <script>
let age = prompt("Введите ваш возраст");

if (isNaN(age) || age === null || age.trim() === "") {
  alert("Пожалуйста, введите корректный возраст.");
} else {
  age = Number(age);

  let maxCreditAmount = 0;

  if (age < 18) {
    alert("Вам не могут выдать кредит.");
  } else if (age >= 18 && age <= 21) {
    maxCreditAmount = 50000;
  } else if (age >= 22 && age <= 35) {
    maxCreditAmount = 400000;
  } else if (age >= 36 && age <= 65) {
    maxCreditAmount = 1000000;
  } else if (age > 65) {
    alert("Вам не могут выдать кредит.");
    return;
  }

  if (maxCreditAmount > 0) {
    let requestedAmount = prompt(
      `Введите сумму кредита, которую хотите взять (до ${maxCreditAmount} рублей):`
    );

    if (
      isNaN(requestedAmount) ||
      requestedAmount === null ||
      requestedAmount.trim() === ""
    ) {
      alert("Пожалуйста, введите корректную сумму.");
    } else {
      requestedAmount = Number(requestedAmount);

      if (requestedAmount > maxCreditAmount) {
        alert(`Вы не можете получить больше, чем ${maxCreditAmount} рублей.`);
      } else if (requestedAmount % 1000 !== 0) {
        alert(
          `Вы ввели сумму некратную 1000. Мы можем вам выдать ${maxCreditAmount} рублей.`
        );
      } else {
        alert(`Вы можете получить кредит на сумму ${requestedAmount} рублей.`);
      }
    }
  }
}
    </script>
</body>

</html>

